<fieldset>
  <div class="required">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="required">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <%- if @user.openid_identifier.blank? -%>
    <div class="required">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="required">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>
</fieldset>