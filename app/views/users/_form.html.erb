<% if @user.openid_identifier.blank? %>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Submit" %></p>

  <h2>Or use OpenID</h2>
<% end %>
<p>
  <%= f.label :openid_identifier, "OpenID URL" %><br />
  <%= f.text_field :openid_identifier %>
</p>
<p><%= f.submit "Submit" %></p>

