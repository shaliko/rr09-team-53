<%- title 'New template' -%>

<div class="container-form">
  <%- form_for [@user, @template] do |f| -%>
    <%= f.error_messages -%>

    <%= render :partial => "form", :locals => {:f => f} -%>
    <div class="buttonrow">
      <%= submit_tag 'Create' -%> <%= link_to 'Cancel', :back, :class => 'negative' -%>
    </div>
  <%- end -%>
</div>