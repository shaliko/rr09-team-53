<%- title 'Templates' -%>

<%- unless @templates.blank? -%>
<table width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <th width="70%">Title</th>
    <th width="20%">&nbsp;</th>
  </tr>
  <%- for template in @templates -%>
    <tr>
      <td><%= link_to h(template.title), user_template_path(@user, template) -%></td>
      <td align="right">
        <%= link_to '&nbsp;', edit_user_template_path(@user, template), { :class => 'icon edit', :title => 'Edit' } -%>
        <%= link_to '&nbsp;', user_template_path(@user, template), { :method => :delete, :confirm => 'Do you realy want to delete this template?', :class => 'icon delete', :title => 'Delete' } -%>
      </td>
    </tr>
  <%- end -%>
</table>
<%= will_paginate @templates %>
<%- else -%>
<p>List is empty.</p>
<%- end -%>