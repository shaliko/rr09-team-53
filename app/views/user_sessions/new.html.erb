<%# title "Login" %>
<h1>Login</h1>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Submit" %> <%= link_to 'cancel', :back, :class => 'negative' -%></p>

  <h2>Or use OpenID</h2>
  <p>
    <%= f.label :openid_identifier, "OpenID URL" %><br />
    <%= f.text_field :openid_identifier %>
  </p>
  <p><%= f.submit "Submit" %> <%= link_to 'cancel', :back, :class => 'negative' -%></p>
<% end %>